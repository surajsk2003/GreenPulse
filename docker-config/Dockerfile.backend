FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    postgresql-client \
    libpq-dev \
    pkg-config \
    && rm -rf /var/lib/apt/lists/*

# Upgrade pip and use pip cache
RUN pip install --upgrade pip setuptools wheel

# Copy requirements and install Python dependencies
COPY backend/requirements.railway.txt ./requirements.txt
RUN pip install --prefer-binary --no-cache-dir -r requirements.txt

# Copy application code
COPY backend/ .

# Copy only essential files from data pipeline
COPY data-pipeline/ashrae_processor.py ./data-pipeline/

# Create necessary directories and copy sample metadata
RUN mkdir -p ./models ./data-pipeline ./ashrae-energy-data
COPY backend/sample_building_metadata.csv ./ashrae-energy-data/building_metadata.csv

# Create non-root user
RUN useradd -m -u 1000 appuser && chown -R appuser:appuser /app
USER appuser

EXPOSE 8000

# Command to run the application with startup script
CMD ["python", "start.py"]