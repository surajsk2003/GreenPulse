option_settings:
  aws:elasticbeanstalk:application:environment:
    DATABASE_URL: "postgresql://username:password@database-endpoint:5432/greenpulse"
    PYTHONPATH: "/var/app/current/backend:/var/app/current"
    PROJECT_NAME: "GreenPulse"
    API_V1_STR: "/api"
    SECRET_KEY: "aws-secret-key-change-in-production"
    ALLOWED_ORIGINS: "https://your-cloudfront-domain.cloudfront.net,http://localhost:4200"

commands:
  01_create_directories:
    command: "mkdir -p /var/app/current/models /var/app/current/data-pipeline /var/app/current/ashrae-energy-data"
  02_copy_sample_data:
    command: "cp /var/app/current/backend/sample_building_metadata.csv /var/app/current/ashrae-energy-data/building_metadata.csv"